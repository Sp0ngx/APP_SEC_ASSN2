@model BookwormsOnline.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="display-4 text-danger">Oops! Something went wrong.</h1>

<p>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        @Model.Message
    }
    else
    {
        <text>We're unable to process your request right now. Please try again later.</text>
    }
</p>

<p>
    <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Go back to Home</a>
</p>

<hr />
<small>Request ID: @Model.RequestId</small>