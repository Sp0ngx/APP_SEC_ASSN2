<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookwormsOnline</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookwormsOnline.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    BookwormsOnline
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* Visible only to logged-in users *@
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                    Home
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ChangePassword" asp-action="Index">
                                    Change Password
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="TwoFactor" asp-action="Setup">2FA Settings</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Register" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <div id="sessionBanner" class="alert alert-warning text-center" role="alert">
                Your session will expire in <span id="sessionCountdown"></span> seconds. Click anywhere to continue.
                </div>
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - BookwormsOnline -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const sessionTimeout = @Context.Items["SessionTimeoutMinutes"] * 60 * 1000;
        const warningTime = @Context.Items["WarningBeforeMinutes"] * 60 * 1000;

        let warningTimer, logoutTimer, countdownInterval;
        const banner = document.getElementById("sessionBanner");
        const countdownEl = document.getElementById("sessionCountdown");

        let sessionStart = Date.now();

        function startSessionTimers() {
            clearTimeout(warningTimer);
            clearTimeout(logoutTimer);
            clearInterval(countdownInterval);

            sessionStart = Date.now();

            // Show warning
            warningTimer = setTimeout(() => {
                banner.classList.remove("d-none");
                startCountdown();
            }, sessionTimeout - warningTime);

            // Auto logout
            logoutTimer = setTimeout(() => {
                window.location.href = "/Logout";
            }, sessionTimeout);
        }

        function startCountdown() {
            updateCountdown();
            countdownInterval = setInterval(updateCountdown, 1000);
        }

        function updateCountdown() {
            const elapsed = Date.now() - sessionStart;
            const remaining = Math.max(0, sessionTimeout - elapsed);
            if (!banner.classList.contains("d-none")) {
                countdownEl.textContent = Math.ceil(remaining / 1000);
            }
        }

        function pingServer() {
            fetch("/Home/KeepAlive", { method: "GET", credentials: "include" });
        }

        ["click","keypress","scroll"].forEach(evt =>
            document.addEventListener(evt, () => {
                startSessionTimers();
                pingServer();
                if (!banner.classList.contains("d-none")) {
                    banner.classList.add("d-none");
                    clearInterval(countdownInterval);
                }
            })
        );

        startSessionTimers();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>