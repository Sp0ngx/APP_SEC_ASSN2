@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5 d-flex justify-content-center align-items-center">
    <div class="col-lg-5 col-md-7">
        <div class="card shadow-sm p-4 text-center">
            <h2 class="card-title mb-3">Check Your Email</h2>
            <p class="text-muted mb-4">
                A password reset link has been sent to the email.
                Please check your inbox and spam folder to reset your password.
            </p>

            <a href="/Login" class="btn btn-dark rounded-pill px-5">Back to Login</a>
        </div>
    </div>
</div>
